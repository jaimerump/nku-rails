<% if @current_student.is_admin? %>
  <%= form_tag( assignments_path, method: 'get') do %>
    <%= select_tag "student_id", options_from_collection_for_select(@students, "id", "nickname") %>
    <br />
    <%= submit_tag "View Assignments" %>
  <% end %>
<% end %>

<h1>
  <% if @selected_student %>
    <%= @selected_student.nickname %>'s Assignments
  <% else %>
    All assignments
  <% end %>
</h1>

<table>
  <tbody>
    <th>
      <td>Student</td>
      <td>Assignment</td>
      <td>Score</td>
      <td>Total</td>
      <td>Percentage</td>
    </th>
  
  <% @assignments.each do |assignment| %>
    <tr>
      <td><%= assignment.student.name %></td>
      <td><%= assignment.name %></td>
      <td><%= assignment.score %></td>
      <td><%= assignment.total %></td>
      <td><%= assignment.percentage %>%</td>
    </tr>
  <% end %>
  </tbody>    
</table>

<h2>Current Grade: <%= @average %>%</h2>