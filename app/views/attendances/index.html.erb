<h1>All Attendances
<% if( @selected_student ) %>
  for <%= @selected_student.nickname %>
<% end %>  
</h1>

<ul>
  <% @attendances.each do |attendance| %>
  <li>
    <span><%= link_to( attendance.student.nickname, student_attendances_path( attendance.student ) ) %></span>
    <span><%= attendance.attended_on %></span>
    <img src="<%= attendance.student.avatar %>" />
  </li>
  <% end %>
</ul>
